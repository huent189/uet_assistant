<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/backgroundLight">
    <item android:id="@android:id/mask">
            <layer-list>
                <item android:start="-3dp" android:end="-3dp" android:top="-3dp">
                    <shape>
                        <solid android:color="@color/background" />
                        <stroke android:color="@color/backgroundLight"
                            android:width="1dp"/>
                    </shape>
                </item>
            </layer-list>
    </item>

    <item android:id="@android:id/background">
        <layer-list>
            <item android:start="-3dp" android:end="-3dp" android:top="-3dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <stroke android:color="@color/backgroundLight"
                        android:width="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>