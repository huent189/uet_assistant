<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/whiteDisable</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>
        <item name="android:timePickerStyle">@style/TimePicker</item>
        <item name="android:datePickerDialogTheme">@style/DatePickerDialog</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="checkboxStyle">@style/CheckBox</item>
    </style>


    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_check</item>
    </style>

    <style name="ErrorText">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/small_margin_2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_paragraph</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@color/dark_fade</item>
        <item name="android:padding">@dimen/small_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_paragraph</item>
    </style>

    <style name="RadioGroup">
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/primary</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:background">@color/backgroundLight</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:background">@color/backgroundLight</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_button_title</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/accent_button_background</item>
        <item name="android:layout_height">@dimen/button_size</item>
    </style>

    <style name="CircleButton" parent="Button">
        <item name="android:layout_height">@dimen/circle_button_size</item>
        <item name="android:layout_width">@dimen/circle_button_size</item>
    </style>

    <style name="BackgroundHighlight">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textSize">@dimen/font_size_item_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textSize">@dimen/font_size_caption</item>
        <item name="android:textColor">@color/whiteDisable</item>
    </style>

    <style name="ListTitle">
        <item name="android:textSize">@dimen/font_size_list_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTitle">
        <item name="android:textSize">@dimen/font_size_tab_title</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/font_size_page_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:textSize">@dimen/font_size_paragraph</item>
    </style>

    <style name="ReceiveMessage" parent="Message">
        <item name="android:background">@drawable/receive_message_background</item>
    </style>

    <style name="SendMessage" parent="Message">
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/send_message_background</item>
    </style>

    <style name="TimePicker" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="dialogCornerRadius">@dimen/small_radius</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:background">@color/background</item>
        <item name="buttonBarButtonStyle">@style/Button</item>
        <item name="android:headerBackground">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/backgroundLight</item>
        <item name="android:numbersBackgroundColor">@color/background</item>
        <item name="android:numbersInnerTextColor">@color/whiteDisable</item>
        <item name="android:numbersTextColor">@color/white</item>
    </style>

    <style name="DatePickerDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:datePickerStyle">@style/DatePicker</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="DatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="dialogCornerRadius">@dimen/small_radius</item>
<!--        <item name="android:descendantFocusability">blocksDescendants</item>-->
        <item name="android:background">@color/background</item>
        <item name="buttonBarButtonStyle">@style/Button</item>
        <item name="android:headerBackground">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
        <!--        <item name="android:colorPrimaryDark">@color/backgroundLight</item>-->
<!--        <item name="android:numbersBackgroundColor">@color/background</item>-->
<!--        <item name="android:numbersInnerTextColor">@color/whiteDisable</item>-->
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:weekNumberColor">@color/white</item>
        <item name="android:weekDayTextAppearance">@style/ListTitle</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textSize">@dimen/font_size_input_text</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingStart">@dimen/margin_x2</item>
        <item name="android:paddingEnd">@dimen/small_margin_2</item>
        <item name="android:textColorHint">@color/whiteDisable</item>
        <item name="android:colorControlNormal">@color/primaryDark</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="BottomNavigation">
        <item name="android:background">@drawable/navbar_background</item>
        <item name="itemIconTint">@color/nav_item</item>
        <item name="itemTextColor">@color/nav_item</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    
    <style name="CardCourse">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/card_course_height</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:foregroundGravity">left</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingEnd">@dimen/card_course_padding_end</item>
        <item name="android:paddingStart">@dimen/card_course_padding_start</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/title_search_hint</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="closeIcon">@drawable/ic_close_24dp</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="layout_collapseMode">pin</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="collapseIcon">@drawable/ic_arrow_back_24dp</item>
        <item name="android:paddingEnd">@dimen/margin</item>
        <item name="android:paddingStart">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

</resources>