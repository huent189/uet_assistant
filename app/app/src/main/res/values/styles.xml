<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/whiteDisable</item>
        <item name="searchViewStyle">@style/SearchViewMy</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/accent_button_background</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="CircleButton" parent="Button">
        <item name="android:layout_height">@dimen/circle_button_size</item>
        <item name="android:layout_width">@dimen/circle_button_size</item>
    </style>

    <style name="BackgroundHighlight">
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
    </style>

    <style name="Text">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Title" parent="Text">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header1" parent="Text">
        <item name="android:textSize">@dimen/header1_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header2" parent="Text">
        <item name="android:textSize">@dimen/header2_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolbarTitleText">
        <item name="android:textSize">@dimen/header1_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle" parent="Text">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Message" parent="Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sibling_margin</item>
    </style>

    <style name="ReceiveMessage" parent="Message">
        <item name="android:background">@drawable/receive_message_background</item>
    </style>

    <style name="SendMessage" parent="Message">
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@drawable/send_message_background</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColorHint">@color/whiteDisable</item>
        <item name="android:colorControlNormal">@color/primaryDark</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@drawable/navbar_background</item>
        <item name="itemIconTint">@color/nav_item</item>
        <item name="itemTextColor">@color/nav_item</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    
    <style name="CardCourse">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/card_course_height</item>
        <item name="android:layout_marginTop">@dimen/sibling_margin</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:foregroundGravity">left</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingEnd">@dimen/card_course_end_padding</item>
        <item name="android:paddingStart">@dimen/card_course_start_padding</item>
    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">Tìm kiếm</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="closeIcon">@drawable/ic_close_24dp</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="layout_collapseMode">pin</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">@dimen/toolbar_size</item>
        <item name="collapseIcon">@drawable/ic_arrow_back_24dp</item>
        <item name="android:paddingEnd">@dimen/sibling_margin</item>
        <item name="android:paddingStart">0dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
        <item name="contentInsetStart">@dimen/sibling_margin_x3</item>
    </style>
</resources>
