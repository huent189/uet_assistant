<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/cvContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="@dimen/small_radius"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/edit_text_background"
        android:layout_width="wrap_content"
        android:minWidth="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_x2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_attach_file_32dp"
            android:padding="@dimen/small_margin"
            android:background="@drawable/circle"/>

        <TextView
            style="@style/ListItemTitle"
            android:id="@+id/tvAttachmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="Trước đây mình có viết bài kể về một bạn nam còn trẻ, phạm tội do thiếu hiểu biết pháp luật (vì giúp tiêu thụ các tài sản mà bạn cậu ta ăn cắp được) và đi tù một thời gian ngắn. Nhưng khi đã chấp hành xong án phạt tù và trở về, cậu ta không còn hòa nhập được với cuộc sống nữa, vì hầu như mọi người xung quanh đều bới móc lại sai lầm cũ của cậu, gạt cậu khỏi cộng đồng."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/ListTitle"
            android:id="@+id/tvAttachmentSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nan" />

    </LinearLayout>

</androidx.cardview.widget.CardView>